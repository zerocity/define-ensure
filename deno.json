{
  "name": "@zerocity/define-ensure",
  "description": "Type-safe runtime assertions with definable error factories and TypeScript narrowing",
  "version": "0.1.5",
  "license": "MIT",
  "exports": "./src/mod.ts",
  "publish": {
    "exclude": [
      "src/_test/",
      "mise.toml",
      "npm/",
      "scripts/"
    ]
  },
  "tasks": {
    "dev": "deno run --watch main.ts",
    "test": "deno test",
    "test:watch": "deno test --watch",
    "test:coverage": "deno test --coverage=coverage",
    "check": "deno check src/mod.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "build:npm": "deno run -A scripts/build_npm.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/expect": "jsr:@std/expect@1",
    "@std/testing": "jsr:@std/testing@1"
  },
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true
  }
}